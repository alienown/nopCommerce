@using Nop.Plugin.Misc.IssueManagement.Models

@model AddIssueModel

@{
    Layout = "_AdminLayout";
    ViewBag.PageTitle = T("Plugins.Misc.IssueManagement.Add.Title").Text;
    Html.SetActiveMenuItemSystemName("New issue");
    Html.AddCssFileParts(ResourceLocation.Head, "~/Plugins/Misc.IssueManagement/Content/index.css");
}

@{
    const string hideBasicInfoBlockAttributeName = "Plugins.Misc.IssueManagement.Add.BasicInfoPanel";
    var hideBasicInfoPanel = genericAttributeService.GetAttribute<bool>(workContext.CurrentCustomer, hideBasicInfoBlockAttributeName, defaultValue: true);
}

<form asp-action="Add" asp-controller="Issue" method="post">
    <div class="content-header clearfix">
        <h1 class="pull-left">
            @T("Plugins.Misc.IssueManagement.Add.AddNewIssue")
            <small>
                <i class="fa fa-arrow-circle-left"></i>
                <a asp-action="List">@T("Plugins.Misc.IssueManagement.Add.ToIssueList")</a>
            </small>
        </h1>
        <div class="pull-right">
            <button name="saveButton" type="submit" class="btn bg-blue">
                <i class="fa fa-floppy-o"></i>
                @T("Admin.Common.Save")
            </button>
            <button name="saveContinueButton" type="submit" class="btn bg-blue">
                <i class="fa fa-floppy-o"></i>
                @T("Admin.Common.SaveContinue")
            </button>
        </div>
    </div>
    <div class="content">
        <div class="form-horizontal">
            <nop-panels id="issue-panels">
                <nop-panel asp-name="basicInfoPanel"
                           asp-icon="fa fa-info"
                           asp-title="@T("Plugins.Misc.IssueManagement.Add.BasicInfoPanel.Title")"
                           asp-hide-block-attribute-name="@hideBasicInfoBlockAttributeName"
                           asp-hide="@hideBasicInfoPanel"
                           asp-advanced="false">
                    @await Html.PartialAsync("~/Plugins/Misc.IssueManagement/Views/Add/_BasicInfo.cshtml", Model)
                </nop-panel>
            </nop-panels>
        </div>
    </div>
</form>

<script>
    var basicInfoScope = function () {
        var self = {};

        function createDeadlineDateTimePicker() {
            var input = $('#Deadline');
            input.kendoDateTimePicker({
                dateInput: true,
                timeFormat: 'hh:mm',
            });

            input.data('kendoDateTimePicker').value(null)
            input.attr('readonly', true);

            var clearButton = '<span class="k-datetimepicker-clear k-link k-link-clear" aria-label="Clear the DateTimePicker"><span unselectable="on" class="k-icon k-i-close" aria-controls="dtp_timeview"></span></span>';
            input.data('kendoDateTimePicker').wrapper.find(".k-select").append(clearButton);

            $(".k-datetimepicker-clear.k-link.k-link-clear").on("click", function (e) {
                input.data('kendoDateTimePicker').value(null)
            });
        }

        self.initialize = function () {
            createDeadlineDateTimePicker();
        }

        return self;
    }();

    $(document).ready(function () {
        basicInfoScope.initialize();
    });
</script>