@using Nop.Plugin.Misc.IssueManagement.Models

@model EditBasicInfoPanelModel

@{
    var deadline = Model.Deadline.HasValue ? Model.Deadline.Value.ToString() : null;
}

<div class="panel-body">
    <div id="basicInfoFormContainer">
        <form id="basicInfoForm">
            <div class="form-group">
                <div class="col-md-3">
                    <nop-label asp-for="Name" />
                </div>
                <div class="col-md-9">
                    <nop-editor asp-for="Name" />
                    <span asp-validation-for="Name"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-3">
                    <nop-label asp-for="Description" />
                </div>
                <div class="col-md-9">
                    <nop-editor asp-for="Description" />
                    <span asp-validation-for="Description"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-3">
                    <nop-label asp-for="Deadline" />
                </div>
                <div class="col-md-9">
                    @Html.TextBoxFor(x => deadline)
                    <span asp-validation-for="Deadline"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-3">
                    <nop-label asp-for="Priority" />
                </div>
                <div class="col-md-9">
                    <nop-select asp-for="Priority" asp-items="Model.PrioritySelectList" />
                    <span asp-validation-for="Priority"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-3">
                    <nop-label asp-for="Status" />
                </div>
                <div class="col-md-9">
                    <nop-select asp-for="Status" asp-items="Model.StatusSelectList" />
                    <span asp-validation-for="Status"></span>
                </div>
            </div>
        </form>
    </div>
    <div class="form-group">
        <div class="col-md-9 col-md-offset-3">
            <button type="button" id="saveBasicInfo" class="btn btn-primary">
                @T("Plugins.Misc.IssueManagement.Edit.BasicInfoPanel.SaveButton")
            </button>
        </div>
    </div>
</div>